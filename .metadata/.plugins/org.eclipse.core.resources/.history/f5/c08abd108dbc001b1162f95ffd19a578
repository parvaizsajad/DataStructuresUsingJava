package ll;



public class LL {
	public class Node{
		Node next;
		Node prev;
		int data;
	public Node(int data) {
		this.data=data;
	}
	}
Node head;
Node tail;
int size=0;
	
	
	@Override
public String toString() {
		StringBuffer sb=new StringBuffer();
		sb.append("[");
		Node curr=head;
		while(curr!=null) {
			sb.append(curr.data).append(",");
			curr=curr.next;
			
		
		}
		if(sb.length()>1) {// when ever we add the commas we will have an extra comma in the output 
			sb.deleteCharAt(sb.length()-1);//// here we will use the method delete char at length minus 1 to get the last element of the string.
		}
			sb.append("]");// at last we will append the closing the bracket 
			
			return sb.toString(); //ad return the sb string 
		}

	public void add(int data) {
	Node nn=new Node(data);
		if(head==null) {
			head=tail=nn;
		}else
		{
			tail.next=nn;
			nn.prev=tail;
			tail=nn;
		}
		size++;
		System.out.println(this);
	}
public int get(int index) {
	if(index<0||index>size-1) {
		System.out.println("the index is out of the bond");
		return -1;
	}
	

int mid=(size-1)/2;
Node target=null;
if(mid<index) {
	//forward direction
	target=findForward(index);
	
}else
{
	target=findBackword(index);
}
return target.data;
}
private Node findForward(int index) {
	Node curr=head;
	int i=0;
	while(curr!=null && i!=index) {
		curr=curr.next;
		i++;
	}
	return curr;
}
private Node findBackword(int index) {
	Node curr=tail;
	int i=size-1;
	while(curr!=null && i!=index) {
		curr=curr.prev;
		
		i--;
	}
	return curr;
}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
LL ll=new LL();
ll.add(50);
ll.add(51);
ll.add(52);
ll.add(53);
System.out.println(ll.get(77));

	}

}
